<div class="uk-container uk-container-center ">
  <div class="uk-grid title-row">
    <div class="uk-width-1-1 uk-text-center">
      <h1 class="top-navi">Aloha Instant Messenger</h1>
      <a class="navlink" href="/signup">Sign Up!</a>
    </div>
  </div>
  <div class="uk-grid form-content">
    <div class="uk-width-1-1 uk-container-center">
      <h2 class="form-title">Login Form</h2>
      <form class="login uk-form">
        <div class="uk-form-row">
          <label for="exampleInputEmail1">Email address</label>
        </div>
        <div class="uk-form-row">
          <input type="email" class="uk-form-width-medium uk-input" id="email-input" placeholder="Email">
        </div>
        <br>
        <div class="uk-form-row">
          <label for="exampleInputPassword1">Password</label>
        </div>
        <div class="uk-form-row">
          <input type="password" class="uk-form-width-medium uk-input" id="password-input" placeholder="Password">
        </div>
        <button type="submit" class="uk-button uk-button-secondary">Login</button>
      </form>
      <br>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/login.js"></script>